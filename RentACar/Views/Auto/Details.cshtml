@model Auto

@{
    ViewData["Title"] = "Auto Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="row g-0">
            <div class="col-md-6">
                <img src="@Model.Image" class="img-fluid rounded-start" alt="@Model.Brand @Model.Model">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h2 class="card-title">@Model.Brand @Model.Model</h2>
                    <p class="card-text"><strong>Year:</strong> @Model.Year</p>
                    <p class="card-text"><strong>Passenger Seats:</strong> @Model.PassengerSeats</p>
                    <p class="card-text"><strong>Price Per Day:</strong> $@Model.PricePerDay</p>
                    <p class="card-text">@Model.Description</p>

                    <div class="mt-4">
                        @if (User.IsInRole("Administrator"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
    }

    .img-fluid {
        height: 100%;
        object-fit: cover;
    }
</style>